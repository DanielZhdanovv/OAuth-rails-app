<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name%>
  </div>

  <div>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "form" %>
  </div>

  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"(6 characters minimum)" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit "Sign up"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>